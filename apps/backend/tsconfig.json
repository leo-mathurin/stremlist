{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src", "vitest.config.ts"],
  "exclude": ["node_modules"]
}
